<!-- tip : class name be able to toggle [hide-departments, hide-border] -->
<header data-component="OHeader" class="o-header hide-departments">
    <input type="hidden" id="signinFormPath" value="/<%= pageInfo.lang %>/j_spring_security_check">
    <input type="hidden" id="forgotPasswordPath" value="/<%= pageInfo.lang %>/password/requestSignIn">
    <input type="hidden" id="joinFormPath" value="/<%= pageInfo.lang %>/register/newcustomer">
    <input type="hidden" id="isIndex" value="false">
    <input type="hidden" id="isAccountPage" value="">
    <input type="hidden" id="contextPath2" value="en">

    <!-- header-bar -->
    <div class="header-bar">
        
        <!-- o-search -->
        <div data-component="OSearch" class="o-search" area-hidden="true">
            <ul class="curated-search-suggestions">
<!--                <li class="a-tag is-suggestion is-hidden"><a class="a-link" href="#" target="_self">New arrivals</a></li>-->
<!--                <li class="a-tag is-suggestion is-hidden"><a class="a-link" href="#" target="_self">Women</a></li>-->
