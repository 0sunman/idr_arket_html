        <button type="button" class="a-button-nostyle my-account-icon tooltip-trigger" area-hidden="false" aria-label="My account">
            <span class="a-icon-profile"></span>
        </button>

        <div class="my-account-section tooltip-content" aria-hidden="true" aria-expanded="false">
