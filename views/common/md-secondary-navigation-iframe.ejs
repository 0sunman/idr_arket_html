                    </li>
                </ul>
                <div class="tablist-content">

                    <iframe class="sign-in-form-iframe"
                        <%
                        if(pageInfo.isLocalExPath) {
                        %>
                            src="<%= pageInfo.pageRoot %>/dist/<%= pageInfo.lang %>/login/ifrp-sign-in-form.html"
                        <%
                        }else {
                        %>
                            src="/<%= pageInfo.lang %>/login/ifrp-sign-in-form.html"
                        <%
                        }
                        %>
                        width="100%"
                        height="550px"
                        frameborder="no"
                        scrolling="no"
                        marginheight="0"
                        marginwidth="0">
                    </iframe>

                </div>
            </div>
        </div>

    </div>
    <div class="information-block">
        <button type="button" class="a-button-nostyle info-icon tooltip-trigger" aria-label="information">
