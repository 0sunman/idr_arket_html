            <span class="wrapper">
                <span class="handle"></span>
                <span class="quantity">2</span>
            </span>
        </span>
    </a>

    <button type="button" class="a-button-nostyle a-burger js-a-burger animate" aria-label="menu">
        <span class="line-wrapper">
            <span class="line"></span>
            <span class="line"></span>
            <span class="line"></span>
        </span>
    </button>
