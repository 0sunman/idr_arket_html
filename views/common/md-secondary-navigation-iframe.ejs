<nav class="secondary-navigation">
    <button type="button" class="a-button-nostyle search-icon a-icon" aria-label="search">
        <div class="a-icon-container">
            <span class="s1"></span>
            <span class="s2"></span>
        </div>
    </button>
    <div class="my-account-block">
        <a href="/<%= pageInfo.lang %>/my-account/profile" target="_self" id="myAccountLink" style="display:none;" class="a-link my-account-icon" area-hidden="true" aria-label="My account">
            <span class="a-icon-profile"></span>
