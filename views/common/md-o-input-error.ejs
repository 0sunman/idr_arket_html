<script>
    $(document).ready(function(){
        if(!($.trim($("#errorLabel").html())=='')){
            $('#errorBox').removeClass('is-hidden');
            $('#errorBox').addClass("m-error");
        }
        $("#forgottenButton").click(function(){
            $("#errorLabel").empty();
            $("#errorBox").addClass("is-hidden");
        });
    })
</script><!--// input error text 관련.js -->


