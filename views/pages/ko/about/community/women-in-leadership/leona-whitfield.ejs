                <div class="image-container">
                    <div class="trackImage col-item">
                        <img class="a-image" src="<%= pageInfo.root %>/images/about/ARKET_21123_IWD_6_WEB.jpg">
                    </div>
                </div>
                <div class="image-container">
                    <div class="trackImage col-item">
                        <img class="a-image" src="<%= pageInfo.root %>/images/about/ARKET_21123_IWD_7_WEB.jpg">
                    </div>
