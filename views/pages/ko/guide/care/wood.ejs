                            </div>

                            <div class="image-container">
                                <div class="trackImage col-item">
                                    <img class="a-image" src="<%= pageInfo.root %>/images/care/CARE_wood_chopping_boards_03_f.jpg">
                                    <span class="promoIndex" hidden="">7</span>
                                </div>
                                <%# md-o-img-promotion-data %>
                                <%- include ("../../../../common/md-o-img-promotion-data.ejs") %>
                            </div>

                            <div class="image-container">
                                <div class="trackImage col-item">
                                    <img class="a-image" src="<%= pageInfo.root %>/images/care/CARE_wood_chopping_boards_04_f.jpg">
                                    <span class="promoIndex" hidden="">8</span>
                                </div>
                                <%# md-o-img-promotion-data %>
                                <%- include ("../../../../common/md-o-img-promotion-data.ejs") %>
                            </div>

                            <div class="image-container">
                                <div class="trackImage col-item">
                                    <img class="a-image" src="<%= pageInfo.root %>/images/care/CARE_wood_chopping_boards_05_f.jpg">
                                    <span class="promoIndex" hidden="">9</span>
                                </div>
                                <%# md-o-img-promotion-data %>
                                <%- include ("../../../../common/md-o-img-promotion-data.ejs") %>
                            </div>
