<main data-component="OPageContent" class="o-page-content cofs-page page-cart" ng-controller="CartContextController">

    <!-- tip : noResult 시 is-empty 클래스 추가 -->
    <div class="o-cart is-empty" data-component="OCart">
        <!-- cart-items -->
        <div class="cart-items">
            <h2 class="a-heading-2 cart-items-heading">장바구니</h2>

            <!-- o-cart-item-empty -->
            <span class="cart-is-empty-label">장바구니가 비어있습니다.</span>
            <a class="a-button btn-keep-shopping" href="#none">쇼핑계속하기</a>
            <!-- //o-cart-item-empty -->

        </div>
        <!-- //cart-items -->

        <!-- order-summary-section -->
        <div class="order-summary-section">
            <h2 class="a-heading-2 order-summary-heading">주문 요약</h2>
            <div class="o-order-summary">
                <div class="order-value-section">
                    <span class="order-value-label">총 상품금액</span>
                    <span class="order-value price-won">12,190,000</span>
                </div>
                <div class="discount-section">
                    <span class="discount-label">할인금액</span>
                    <span class="discount price-won">-100,000</span>
                </div>
                <div class="staff-discount-section">
                    <span class="staff-discount-label">임직원 할인</span>
                    <span class="staff-discount price-won">-4,000</span>
                </div>
                <div class="shipping-section">
                    <span class="shipping-label">배송비</span>
                    <span class="shipping price-won">2,500</span>
                </div>
                <form class="o-cart-discount-code has-discount" data-component="OCartDiscountCode">
                    <button class="a-button-nostyle title" type="button">프로모션 코드를 입력하시겠습니까?
                        <span class="a-icon-arrow-down" role="button" aria-label="expand/close"></span>
                    </button>
                    <div class="code-area">
                        <button class="a-button-nostyle cancel" type="button"></button>
                        <div class="m-input" data-component="MInput">
                            <label class="a-label js-a-label" for="cart-discount-code">프로모션 코드</label>
                            <input class="a-input js-a-input" placeholder="프로모션 코드" type="text" value="" name="cart-discount-code" id="cart-discount-code">
                            <label class="a-label js-a-label" for="cart-discount-code" data-placeholder="Voucher code">프로모션 코드</label>
                            <p class="a-paragraph error-text">프로모션 코드가 정확하지 않습니다.</p>
                        </div>
                        <button class="a-button add">
                            <span>확인</span>
                        </button>
                        <div class="discount-code">
                            <div class="text">
                                <span class="added-code-label">50% 할인적용</span>
                                <span class="added-code">ABC-DEF-EXAMPLE</span>
                            </div>
                            <a class="a-link remove" href="#" target="_self">적용취소</a>
                        </div>
                        <span class="discount-error-message">프로모션 코드를 입력해주세요</span>
                    </div>
                </form>
                <div class="total-section">
                    <span class="total-label">총 결제 예정 금액</span>
                    <span class="total price-won">83,500</span>
                </div>
            </div>
            <a class="a-button is-disabled is-checkout-options checkout-button"
               href="/views/common/views/pages/checkout/checkout-guest-options.html">주문하기
            </a>
