<div data-component="OPageContent" class="o-page-content cofs-page">
        <div class="o-sign-in-wrapper">

        <!-- 로그인 또는 회원가입 title -->
        <div class="sign-in-heading">
            <h2 class="a-heading-2">로그인 또는 회원가입, 비회원주문선택</h2>
        </div><!-- // 로그인 또는 회원가입 title -->

        <div class="is-sign-in-tabs">
            <!-- 활성화 탭 표기 : 로그인 -->
            <ul class="m-tablist tabs-1-3">
                <li class="u-no-select is-active">
                    <a href="/en/login" target="_self" class="a-link">로그인</a>
                </li>
                <li class="u-no-select">
                    <a href="/en/register" target="_self" class="a-link">회원가입</a>
                </li>
                <li class="u-no-select">
                    <a href="#none" target="_self" class="a-link">비회원주문</a>
                </li>
            </ul><!-- // 활성화 탭 표기 : 로그인-->

            <div class="o-sign-in alternative-style-option">
                <form class="o-form" data-component="OForm" id="loginForm" method="post">
                    <div class="m-error js-m-error is-hidden">
                        <label class="a-label js-a-label has-error"></label>
                    </div>
                    <!-- input : 아이디 또는 이메일 -->
                    <div data-component="MInput" class="m-input">
                        <label class="a-label js-a-label" for="id">아이디 또는 이메일</label>
                        <input class="a-input js-a-input" id="id" name="id" type="text" pattern="" placeholder="아이디 또는 이메일" data-validation-required-text="아이디를 입력해주세요." data-validation-pattern-text="입력하신 아이디가 맞지 않습니다." required="">
                        <label class="a-label js-a-label" for="id"></label>
                    </div><!-- // input : 아이디 또는 이메일 -->

                    <!-- input : 비밀번호 -->
                    <div data-component="MInput" class="m-input password">
                        <label class="a-label js-a-label" for="password" >비밀번호</label>
                        <input class="a-input js-a-input" id="password" name="password" type="password" pattern="" placeholder="비밀번호" data-validation-required-text="비밀번호를 입력해주세요."  data-validation-pattern-text="입력하신 비밀번호가 맞지 않습니다." required="">
                        <label class="a-label js-a-label" for="password"></label>
                    </div><!-- // input : 비밀번호 -->

                    <div class="checkbox-input">
                        <span class="m-checkbox u-clearfix" id="rememberme">
                            <input type="checkbox" class="a-checkbox" id="checkbox_rememberme" name="checkbox_rememberme">
                            <label class="a-label js-a-label custom-box" for="checkbox_rememberme"></label>
                            <label class="a-label js-a-label" for="checkbox_rememberme">아이디 저장</label>
                        </span>
                    </div>

                    <!-- 아이디 찾기, 비밀번호 찾기 - 해당 페이지로 이동 -->
                    <div class="link-holder col-2">
                        <a href="#none" target="_self" class="a-link forgot-id">아이디찾기</a>
                        <a href="#none" target="_self" class="a-link forgot-password">비밀번호찾기</a>
                    </div>

                    <button type="submit" class="a-button is-primary">
                        <span>로그인</span>
                    </button>

                    <%# SNS 간편로그인 신규추가 %>
                    <%- include ("../../../common/md-o-sns-area.ejs") %>
                </form>
            </div>
        </div><!--// is-sign-in-tabs -->
    </div><!--// o-sign-in-wrapper-->
</div>